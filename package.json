    "prettier": "^3.0.0",
    "turbo": "^1.10.11",
    "typescript": "^5.1.6"
  },
  "pnpm": {
    "peerDependencyRules": {
      "allowedVersions": {
        "serverless-esbuild>esbuild": "0.18"
