{
  "name": "@penxle/monorepo",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "scripts": {
    "bootstrap": "pnpm install && husky install",
    "build": "turbo run build --filter './packages/**'",
    "codegen": "turbo run codegen",
    "dev": "turbo run dev --filter './sites/**' --concurrency 255",
    "fix:eslint": "pnpm lint --fix",
    "fix:prettier": "pnpm format --write",
    "lint:eslint": "eslint '**/*'",
    "lint:prettier": "prettier --check --ignore-unknown '**/*'",
    "lint:spellcheck": "cspell --no-progress --relative '**/*'",
    "lint:svelte": "turbo run lint:svelte",
    "lint:syncpack": "syncpack lint"
  },
  "devDependencies": {
    "@penxle/eslint-config": "workspace:^",
    "@penxle/prettier-config": "workspace:^",
    "cspell": "^7.0.0",
    "eslint": "^8.47.0",
    "gitmoji-cli": "^8.4.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.3",
    "prettier": "^3.0.1",
    "syncpack": "^11.2.1",
    "turbo": "^1.10.12",
    "typescript": "^5.1.6"
  },
  "engines": {
    "node": "^18 || ^20",
    "pnpm": "^8.6.0"
  }
}
