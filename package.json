{
  "name": "@penxle/penxle",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@8.6.0",
  "engines": {
    "node": ">=18",
    "pnpm": ">=8"
  },
  "scripts": {
    "bootstrap": "pnpm install && husky install",
    "dev": "doppler run --command 'vite dev'",
    "build": "vite build",
    "sync": "pnpm run db:migrate && pnpm run codegen",
    "codegen": "pnpm run codegen:kit && pnpm run codegen:db && pnpm run codegen:gql",
    "codegen:kit": "doppler run --command 'pnpm exec svelte-kit sync'",
    "codegen:db": "doppler run --command 'pnpm prisma generate'",
    "codegen:gql": "houdini generate --pull-schema",
    "db:migrate": "doppler run --command 'pnpm prisma migrate dev'",
    "db:migrate:create": "doppler run --command 'pnpm prisma migrate dev --create-only'",
    "lint": "eslint --max-warnings=0 .",
    "format": "eslint --fix .",
    "check": "svelte-check --fail-on-warnings",
    "test": "playwright test",
    "vercel-build": "prisma generate && pnpm run build && prisma migrate deploy"
  },
  "devDependencies": {
    "@aws-sdk/client-s3": "^3.344.0",
    "@aws-sdk/s3-request-presigner": "^3.344.0",
    "@envelop/core": "^4.0.0",
    "@envelop/types": "^4.0.0",
    "@felte/core": "^1.3.7",
    "@felte/validator-zod": "^1.0.13",
    "@floating-ui/dom": "^1.2.9",
    "@iconify-json/lucide": "^1.1.96",
    "@iconify-json/ri": "^1.1.9",
    "@iconify/utils": "^2.1.5",
    "@playwright/test": "^1.34.3",
    "@pothos/core": "^3.30.0",
    "@pothos/plugin-prisma": "^3.51.1",
    "@pothos/plugin-scope-auth": "^3.19.2",
    "@pothos/plugin-simple-objects": "^3.7.0",
    "@pothos/plugin-validation": "^3.9.2",
    "@prisma/client": "^4.15.0",
    "@svelte-kits/store": "^0.1.1",
    "@sveltejs/adapter-vercel": "^3.0.1",
    "@sveltejs/kit": "^1.20.1",
    "@types/node": "^20.2.5",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "@unocss/eslint-plugin": "^0.52.7",
    "@vercel/analytics": "^1.0.1",
    "argon2": "^0.30.3",
    "autoprefixer": "^10.4.14",
    "clsx": "^1.2.1",
    "dayjs": "^1.11.7",
    "eslint": "^8.41.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-import-resolver-typescript": "^3.5.5",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "eslint-plugin-svelte": "^2.30.0",
    "eslint-plugin-unicorn": "^47.0.0",
    "felte": "^1.2.7",
    "gitmoji-cli": "^8.3.0",
    "graphql": "^16.6.0",
    "graphql-scalars": "^1.22.1",
    "graphql-yoga": "^3.9.1",
    "houdini": "^1.2.5",
    "houdini-svelte": "^1.2.5",
    "husky": "^8.0.3",
    "jose": "^4.14.4",
    "lint-staged": "^13.2.2",
    "nanoid": "^4.0.2",
    "network-information-types": "^0.1.1",
    "postcss": "^8.4.24",
    "prettier": "^2.8.8",
    "prettier-plugin-svelte": "^2.10.1",
    "prisma": "^4.15.0",
    "radash": "^10.8.1",
    "sass": "^1.62.1",
    "svelte": "4.0.0-next.0",
    "svelte-check": "^3.4.3",
    "svelte-preprocess": "^5.0.4",
    "svgo": "^3.0.2",
    "typescript": "^5.1.3",
    "unocss": "^0.52.7",
    "vite": "^4.3.9",
    "web-vitals": "^3.3.2",
    "zod": "^3.21.4"
  },
  "pnpm": {
    "peerDependencyRules": {
      "allowedVersions": {
        "svelte": "4"
      }
    }
  }
}
