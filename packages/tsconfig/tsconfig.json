{
  "compilerOptions": {
    "strict": true,

    "target": "esnext",
    "lib": ["esnext", "dom", "dom.iterable"],

    "module": "esnext",
    "moduleResolution": "bundler",

    "noEmit": true,
    "skipLibCheck": true,

    "forceConsistentCasingInFileNames": false,

    "importsNotUsedAsValues": "remove",
    "isolatedModules": false,
    "preserveValueImports": false,
    "verbatimModuleSyntax": true,

    "outDir": "dist"
  }
}
