generator client {
  provider = "prisma-client-js"
}

generator pothos {
  provider = "prisma-pothos-types"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DATABASE_DIRECT_URL")
}

model Image {
  id          Int      @id @default(autoincrement())
  name        String
  size        Int
  format      String
  width       Int
  height      Int
  path        String
  sizes       Int[]
  hash        String
  color       String
  placeholder String
  createdAt   DateTime @default(now()) @map("created_at")

  avatarProfile Profile[]

  @@map("images")
}

model Profile {
  id        Int          @id @default(autoincrement())
  userId    Int          @map("user_id")
  user      User         @relation(fields: [userId], references: [id])
  name      String
  handle    String
  state     ProfileState
  order     Int
  avatarId  Int?         @map("avatar_id")
  avatar    Image?       @relation(fields: [avatarId], references: [id])
  createdAt DateTime     @default(now()) @map("created_at")

  sessions Session[]
  spaces   SpaceMember[]

  @@index([handle])
  @@map("profiles")
}

model Session {
  id        Int      @id @default(autoincrement())
  userId    Int      @map("user_id")
  user      User     @relation(fields: [userId], references: [id])
  profileId Int      @map("profile_id")
  profile   Profile  @relation(fields: [profileId], references: [id])
  createdAt DateTime @default(now()) @map("created_at")

  @@map("sessions")
}

model Space {
  id        Int        @id @default(autoincrement())
  slug      String
  name      String
  state     SpaceState
  createdAt DateTime   @default(now()) @map("created_at")

  members SpaceMember[]

  @@index([slug])
  @@map("spaces")
}

model SpaceMember {
  id        Int             @id @default(autoincrement())
  spaceId   Int             @map("space_id")
  space     Space           @relation(fields: [spaceId], references: [id])
  profileId Int             @map("profile_id")
  profile   Profile         @relation(fields: [profileId], references: [id])
  role      SpaceMemberRole
  createdAt DateTime        @default(now()) @map("created_at")

  @@unique([spaceId, profileId])
  @@map("space_members")
}

model User {
  id        Int       @id @default(autoincrement())
  email     String    @unique
  password  String?
  state     UserState
  createdAt DateTime  @default(now()) @map("created_at")

  profiles Profile[]
  sessions Session[]

  @@map("users")
}

enum ProfileState {
  ACTIVE
  INACTIVE
}

enum SpaceState {
  ACTIVE
  INACTIVE
}

enum UserState {
  ACTIVE
  INACTIVE
}

enum SpaceMemberRole {
  OWNER
  MEMBER
}
